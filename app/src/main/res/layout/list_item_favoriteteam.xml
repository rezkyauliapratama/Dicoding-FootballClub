<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <data >
        <import type="android.view.View" />

        <variable
            name="item"
            type="android.rezkyaulia.com.hellokotlin.data.database.entity.FavoriteTeam" />

    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardCornerRadius="@dimen/margin_small"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <android.rezkyaulia.com.hellokotlin.customview.UrlImageView
                android:layout_width="@dimen/size_image_92dp"
                android:layout_height="@dimen/size_image_92dp"
                android:layout_margin="@dimen/margin_small"
                app:url="@{item.teamBadge}" />

            <com.app.infideap.stylishwidget.view.ATextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/margin_normal"
                android:text="@{item.teamName}"
                android:textAppearance="@style/TextStyle.Medium"
                android:textColor="@color/colorBlack_1000" />

        </LinearLayout>


    </android.support.v7.widget.CardView>
</layout>
