<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <data >
        <import type="android.view.View" />
        <variable
            name="event"
            type="android.rezkyaulia.com.hellokotlin.data.model.Event" />

    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardCornerRadius="@dimen/margin_small"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.app.infideap.stylishwidget.view.ATextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/margin_normal"
                android:textColor="@color/colorBlack_1000"
                android:textAppearance="@style/TextStyle.Medium"
                android:text="@{event.dateEvent}"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.app.infideap.stylishwidget.view.ATextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/margin_normal"
                    android:textColor="@color/colorBlack_1000"
                    android:textAppearance="@style/TextStyle.Small"
                    android:text="@{event.strHomeTeam}"
                    />

                <com.app.infideap.stylishwidget.view.ATextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:gravity="left"
                    android:padding="@dimen/margin_normal"
                    android:textColor="@color/colorBlack_1000"
                    android:textAppearance="@style/TextStyle.Small"
                    android:text="@{event.intHomeScore}"
                    android:visibility="@{event.intHomeScore!=null ? View.VISIBLE : View.GONE}"
                    />


                <com.app.infideap.stylishwidget.view.ATextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="@dimen/margin_normal"
                    android:textColor="@color/colorBlack_1000"
                    android:textAppearance="@style/TextStyle.Medium"
                    android:text="VS"
                    />

                <com.app.infideap.stylishwidget.view.ATextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:gravity="right"
                    android:padding="@dimen/margin_normal"
                    android:textColor="@color/colorBlack_1000"
                    android:textAppearance="@style/TextStyle.Small"
                    android:text="@{event.intAwayScore}"
                    android:visibility="@{event.intAwayScore!=null ? View.VISIBLE : View.GONE}"

                    />

                <com.app.infideap.stylishwidget.view.ATextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/margin_normal"
                    android:gravity="right"
                    android:textColor="@color/colorBlack_1000"
                    android:textAppearance="@style/TextStyle.Small"
                    android:text="@{event.strAwayTeam}"
                    />


            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>
</layout>
